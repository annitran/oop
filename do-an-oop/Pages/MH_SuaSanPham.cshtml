@page
@model do_an_oop.Pages.MH_SuaSanPhamModel
@{
    ViewData["Title"] = "Sửa Sản Phẩm";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />
<br />

@if (Model.sp != null)
{
    <div>
        <form method="post">
            <label for="fname">Nhập Tên hàng:</label><br>
            <input type="text" name="tenhang" value="@Model.sp.TenHang"><br>
            <label for="fname">Nhập NSX:</label><br>
            <input type="date" name="nsx" value="@Model.sp.NSX"><br>
            <label for="fname">Nhập HSD:</label><br>
            <input type="date" name="hsd" value="@Model.sp.HSD"><br>
            <label for="fname">Nhập Tên công ty sản xuất:</label><br>
            <input type="text" name="ctysx" value="@Model.sp.CtySX"><br>

            <label for="fname">Nhập Loại hàng:</label><br>
                <select name="loaihang" style="width:10%">
                    @foreach (var lh in Model.dslh)
                    {
                        <option value="@lh.MaLoaiHang">@lh.TenLoaiHang</option>
                    }
                </select><br>

            <label for="fname">Nhập Giá:</label><br>
            <input type="text" name="gia" value="@Model.sp.Gia"><br><br>

            <input type="submit" style="background-color: #FFD1DC; color: #000000;" value="Lưu">
            <a href="/MH_DanhSachSanPham" class="btn btn-secondary" style="background-color: #FFD1DC; color: #000000;">Quay lại</a>
            <br />
        </form>
    </div>
}

<br />
@Model.ThongBao